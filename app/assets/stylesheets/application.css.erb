	transition: filter 0.15s ease;
}
.has-tooltip:hover {
	/*-webkit-filter: brightness(0.7);*/
	/*filter: brightness(0.7);*/
}
.tooltip {
	color: grey;
	display: none;
	-webkit-transition: filter 0.15s ease;
	transition: filter 0.15s ease;
}
.has-tooltip:hover .tooltip {
	display: block;
	-webkit-filter: brightness(1.429);
	filter: brightness(1.429);
}
#navbar {
	position: absolute;
	top: 0;
	width: 100%;
	height: 51px;

	background-color: transparent;
} #navbar.is-fixed {
	position: fixed;
	top: 0;
	z-index: 100;

	transform: translateY(-100%);
	-webkit-transform: translateY(-100%);
	-ms-transform: translateY(-100%);
} #navbar.is-visible {
	background-color: rgba(20, 20, 20, 0.9);

	transform: none;
	-webkit-transform: none;
	-ms-transform: none;

	transition: all 0.2s ease;
	-webkit-transition: all 0.2s ease;
}
#navbar .navlinks {
	position: absolute;
	top: 17px;
	right: 32px;
	/* height = font-size */
	height: 17px;

	text-transform: uppercase;
	font-weight: bold;
	font-size: 1.2em;
	line-height: normal;
} .navlinks a {
	text-decoration: none;

} .navlinks a:not(:last-child) {
	margin-right: 15px;
} #navbar.is-fixed .navlinks a {
	color: #d8d8d8;
}
#navbar .hamburger {
	display: none;
}

@media only screen and (max-width: 515px) {
	/*Links*/
	#navbar .navlinks {
		visibility: hidden;
		opacity: 0;

		transform: translateX(-100%);
		-webkit-transform: translateX(-100%);
		-ms-transform: translateX(-100%);

		transition: all 0.2s ease;
		-webkit-transition: all 0.2s ease;
	}
	#navbar.active .navlinks {
		visibility: visible;
		opacity: 1;

		transform: none;
		-webkit-transform: none;
		-ms-transform: none;

		margin-right: 20px;
		top: 15px;
		right: 0;
	}
	/*HAMBURGER*/
	#navbar .hamburger {
		position: relative;
		top: 50%;
		transform: translate(70%, -50%);
		-webkit-transform: translate(70%, -50%);
		-ms-transform: translate(70%, -50%);

		width: 24px;
		height: 24px;
		display: inline-block;

		cursor: pointer;
	}
	#navbar .hamburger-icon {
		transform: scale(1);
		-webkit-transform: scale(1);
		-ms-transform: scale(1);
	} #navbar .close-icon {
		background-image: url();

		transform: scale(0);
		-webkit-transform: scale(0);
		-ms-transform: scale(0);
	} #navbar .hamburger-icon,
	#navbar .close-icon {
		position: absolute;
		width: 100%;
		height: 100%;

		background-position: center center;
		background-size: cover;

		transition: all 0.4s ease;
		-webkit-transition: all 0.4s ease;
	} #navbar.active .hamburger-icon {
		transform: scale(0);
		-webkit-transform: scale(0);
		-ms-transform: scale(0);
	} #navbar.active .close-icon {
		transform: scale(1);
		-webkit-transform: scale(1);
		-ms-transform: scale(1);
	}
}

#footer {
	position: absolute;
	right: 10px;
	bottom: 5px;

	color: #8a8a8a;
	font-size: 1.2em;
	text-transform: uppercase;
	/* font-weight: bold; */
	letter-spacing: 3px;
}
#footer,
#footer .copyright,
#footer .social-links,
#footer .icon {
	height: 27px;
	display: inline-block;
}
#footer .copyright {
	position: relative;
    bottom: 5px;
}
#footer .social-links {
	float: right;

	position: relative;
	bottom: 7px;

	margin-left: 10px;
	margin-right: 5px;
}
#footer .icon {
	width: 27px;
	border-radius: 3px;

	margin-right: 2px;
}

@media only screen and (max-width: 515px) {
	#footer {
		width: 100%;
		right: 0;
		bottom: 0;
	}
	#footer .copyright {
		display: block;
		width: 100%;
		margin: 6px auto;

		text-align: center;
		bottom: 6px;
	}
	#footer .mobile-divider {
		width: 30%;
		height: 2px;
		border-radius: 1px;
		background-color: #8a8a8a;

		display: inline-block;
	}
	#footer .social-links {
		float: none;
		position: relative;
    	left: 50%;

    	transform: translateX(-50%);
    	-webkit-transform: translateX(-50%);
    	-ms-transform: translateX(-50%);

    	margin: 0;
    	margin-bottom: 5px;
	} #footer .icon {
		margin: 0;
	} #footer .icon:first-child {
		margin-right: 6px;
	}
}