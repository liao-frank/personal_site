<p id="notice"><%= notice %></p>

<h1>Project Skills</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th></th>
      <th>Skill</th>
      <th>Description</th>
      <th>Order</th>
      <th>Meta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_skills.each do |project_skill| %>
      <tr>
        <td><%= Project.find_by_id(project_skill.project_id).title %></td>
        <td><div class="icon icon-20x20" style="background-image: url(<%= discover_image(project_skill.skill.img_url) %>);"></div></td>
        <td><%= Skill.find_by_id(project_skill.skill_id).name %></td>
        <td><%= project_skill.description %></td>
        <td><%= project_skill.order %></td>
        <td><%= project_skill.meta %></td>
        <td><%= link_to 'Show', project_skill %></td>
        <td><%= link_to 'Edit', edit_project_skill_path(project_skill) %></td>
        <td><%= link_to 'Destroy', project_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

