<p id="notice"><%= notice %></p>

<div class="large-container" style="margin-bottom: 100px;">
	<h1 class="project-title"><%= @project.title %></h1>
	<h4 class="project-subtitle"><%= @project.subtitle %></h4>
	<div class="project-preface">
		<div class="project-slides" style="background-image: url(<%= discover_image("http://i.imgur.com/klHiCqE.png") %>);"></div>
		<div class="project-details">
			<div class="details-main">
				<div class="details-brand" style="background-image: url(<%= discover_image("http://i.imgur.com/klHiCqE.png") %>);"></div>
				<div class="details-snippet-and-skills">
					<div class="details-snippet"><%= @project.snippet %></div>
				</div>
			</div>
		</div>
	</div>
	<div class="project-postface">
		<div class="project-description">
				<div class="slide-block">
					<div class="slide-preview active" onClick="switchSlides(this, '<%= discover_image("http://i.imgur.com/klHiCqE.png") %>');">
						<div class="slide-preview-image" style="background-image: url(<%= discover_image("http://i.imgur.com/klHiCqE.png") %>);"></div>
					</div>
				</div>
				<div class="slide-block">
					<div class="slide-preview" onClick="switchSlides(this, '<%= discover_image("http://i.imgur.com/klHiCqE.png") %>');">
						<div class="slide-preview-image" style="background-image: url(<%= discover_image("http://i.imgur.com/klHiCqE.png") %>);"></div>
					</div>
				</div>
				<div class="slide-block">
					<div class="slide-preview" onClick="switchSlides(this, '<%= discover_image("http://i.imgur.com/klHiCqE.png") %>');">
						<div class="slide-preview-image" style="background-image: url(<%= discover_image("http://i.imgur.com/klHiCqE.png") %>);"></div>
					</div>
				</div>
				<div class="slide-block">
					<div class="slide-preview" onClick="switchSlides(this, '<%= discover_image("http://i.imgur.com/klHiCqE.png") %>');">
						<div class="slide-preview-image" style="background-image: url(<%= discover_image("http://i.imgur.com/klHiCqE.png") %>);"></div>
					</div>
				</div>
		</div>
		<div class="project-sidebar">
			<div class="sidebar-details details-skills">
				<h4>Skills</h4>
				<% for project_skill in @project_skills %>
					<% skill = project_skill.skill %>
					<div class="details-skill">
						<div class="skill-image" style="background-image: url(<%= discover_image(skill.img_url) %>)"></div>
						<div class="skill-label"><%= skill.name %></div>
					</div>
				<% end %>
			</div>
			<div class="sidebar-details details-misc">
				<!-- GitHub Link -->
				<% if @project.github_link %>
					<h4>Github Link</h4>
					<a href="<%= @project.github_link %>" target="_blank">
						<div class="icon icon-12x12" style="background-image: url(<%= discover_image("icons/external_link_white.png") %>);"></div>
						<%= clean_url(@project.github_link) %> LONG TEXT TEST
					</a>
				<% end %>
				<!-- Project Link -->
				<% if @project.site_link %>
					<h4>Project Link</h4>
					<a href="<%= @project.site_link %>" target="_blank">
						<div class="icon icon-12x12" style="background-image: url(<%= discover_image("icons/external_link_white.png") %>);"></div>
						<%= clean_url(@project.site_link) %>
					</a>
				<% end %>
				<!-- Project Dates -->
				<% if @project.dates %>
					<h4>Project Dates</h4>
					<%= @project.dates %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>