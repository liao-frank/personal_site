<p id="notice"><%= notice %></p>

<h1>Project Images</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Caption</th>
      <th>Img url</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_images.each do |project_image| %>
      <tr>
        <td><%= project_image.project.title %></td>
        <td><%= project_image.caption %></td>
        <td><%= project_image.img_url %></td>
        <td><%= project_image.order %></td>
        <td><%= link_to 'Show', project_image %></td>
        <td><%= link_to 'Edit', edit_project_image_path(project_image) %></td>
        <td><%= link_to 'Destroy', project_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

